<link href="/css/Chitmoe.css" rel="stylesheet" type="text/css">

<div id="profile">
    <img src="https://singularlabs.com/wp-content/uploads/2011/11/System-Ninja-2.2.png"/>
</div>
  <div>
    <h1>{{instauser.username}}</h1>
    <form class="user-form" action="" method="post">
      <label for="name">Name</label>
      <input placeholder="Enter your full name here" type="text" value="{{instauser.full_name}}" name="name" id="name"/>
      <br />
      <label for="email">Email</label>
      <input placeholder="Enter your email address here" type="text" name="email" id="email"/>
      <br />
      <label for="bio">Bio</label>
      <textarea placeholder="Tell us a little about yourself" type="text" name="bio" id="Bio"></textarea>
      <br />
      <label for="other">Fun Facts</label>
      <textarea placeholder="What's something that interests you" type="text" name="funfacts" id="Other"></textarea>
      <br />
      <button type="submit" value="Save" id="button">Save</button>
    </form>
  </div>
